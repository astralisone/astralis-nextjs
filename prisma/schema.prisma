model Task {
  id    String @id @default(cuid())
  orgId String

  // Linkage to template
  templateId String
  template   TaskTemplate @relation(fields: [templateId], references: [id])

  // Source tracking
  source   TaskSource
  sourceId String? // Reference to original source (e.g., intakeRequest.id)

  // Pipeline relations
  pipelineId String?
  pipeline   pipeline?      @relation(fields: [pipelineId], references: [id])
  stageId    String?
  stage      pipelineStage? @relation(fields: [stageId], references: [id])

  // Denormalized convenience fields for querying
  pipelineKey String?
  stageKey    String?

  // Task metadata
  type       String
  category   String
  department String?
  staffRole  String?

  // Content
  title       String
  description String?

  // Status and priority
  priority Int
  status   TaskStatus

  // SLA / timeline
  typicalMinutes Int?
  timeline       Json? // { startedAt, dueAt, breachedAt }

  // Task steps and data
  steps       Json? // TaskStep[]
  attachments Json?
  data        Json?
  tags        String[] @default([])

  // Assignment
  assignedToUserId String?

  // Human override
  overridden       Boolean   @default(false)
  overrideReason   String?
  overrideByUserId String?
  overrideAt       DateTime?

  // Agent state (decision tracking)
  agentLastDecisionId String?
  agentDecisionIds    String[] @default([])

  // Relations
  decisionLogs DecisionLog[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orgId, pipelineId, stageId])
  @@index([assignedToUserId])
  @@index([templateId])
  @@index([status])
  @@index([pipelineKey, stageKey])
  @@index([source])
}

model DecisionLog {
  id         String       @id @default(cuid())
  taskId     String
  task       Task         @relation(fields: [taskId], references: [id], onDelete: Cascade)
  orgId      String
  templateId String
  template   TaskTemplate @relation(fields: [templateId], references: [id])

  // Event context
  eventName       String // e.g. task.created, task.status_changed
  eventId         String?
  agentConfigHash String?

  // Decision data
  inputSnapshot Json // Partial snapshot of task relevant to decision
  llmCall       Json? // { model, tokensIn, tokensOut, promptType }
  decision      Json // AgentDecision { reasoning, actions[] }

  // Timestamps
  appliedAt DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([taskId])
  @@index([orgId])
  @@index([templateId])
  @@index([eventName])
  @@index([appliedAt])
}

